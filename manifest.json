{
    "manifest_version": 2,
    "name": "Tab Storage",
    "version": "1.3",
    "description": "Allows saving and restoring groups of open tabs",
    "homepage_url": "https://github.com/dmonzonis/tab-storage",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "downloads"
    ],
    "browser_action": {
        "default_title": "Tab Storage",
        "default_popup": "popup/tab_storage.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "tab-storage@dmonzonis"
        }
    }
}
